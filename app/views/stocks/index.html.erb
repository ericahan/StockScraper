<div class="row">
    <div class="col-md-12">
        <% if current_user.present? && current_user.admin? %>
            <%= link_to("新增驗證股", new_stock_path) %>
        <% end %>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>推薦日期</th>
                    <th>股票名稱</th>
                    <th>進場時間</th>
                    <th>進場價位</th>
                    <th>目標價位</th>
                    <th>今日收盤價</th>
                    <th>損益</th>
                    <th>報酬率</th>
                    <th>附加說明</th>
                    <% if current_user.present? && current_user.admin? %>
                        <td>操作</td>
                    <% end %>
                </tr>
            </thead>
            <tbody>
                <% @stocks.each do |stock| %>
                    <tr>
                        <td>
                            <%= stock.recommend_date %>
                        </td>
                        <td>
                            <%= stock.stock_number %>_<%= stock.stock_name %> 
                        </td>
                        <td>
                            <%= stock.enter_date %>
                        </td>
                        <td>
                            <%= stock.enter_price %>
                        </td>
                        <td>
                            <%= stock.target_price %>
                        </td>
                        <td>
                            <%= stock.current_price %>
                        </td>
                        <td>
                            <%= stock.current_price.to_f - stock.enter_price.to_f %>
                        </td>
                        <td>
                            <%= ((stock.current_price.to_f - stock.enter_price.to_f) * 100 / stock.enter_price.to_f).round(2) %>%
                        </td>
                        <td>
                            <%= stock.description %>
                        </td>
                        <% if current_user.present? && current_user.admin? %>
                            <td>
                                <%= link_to stock_path(stock), method: :delete do %>
                                    <i class="fa fa-trash"></i>
                                <% end %>
                            </td>
                    <% end %>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>